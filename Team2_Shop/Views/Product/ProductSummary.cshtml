@model Team2_Shop.Models.Product

<div class="panel panel-body">

    <!-- 상품 이미지 -->
    <div class="img-bordered">
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.Product_Image)" class="img-thumbnail">
    </div>

    <!-- 상품 이름 -->
    <div class="user-block">    
        <strong class="pull-left">@Model.Product_Name</strong>
    </div>

    <!-- 상품 가격 -->
    <div class="pull-left">
        <h4> @Model.Product_Price.ToString("c") </h4>
    </div>

    <form-group>
        <button class="btn-block btn-foursquare" type="button" data-toggle="modal" data-target="#modal-check" data-productname="@Model.Product_Name"
                data-productid="@Model.Product_ID" data-returnurl ="@Request.Url.PathAndQuery">
            <i class="fas fa-shopping-basket"></i>  장바구니 담기
            @Html.Hidden("productId", @Model.Product_ID)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
        </button>

       
    </form-group>

</div>

