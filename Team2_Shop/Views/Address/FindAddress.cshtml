@model Team2_Shop.Models.AddressModel

@{
    ViewBag.Title = "FindAddress";
    /// 0225 최종커밋
}

<h2>검색화면</h2>

<div class="col-lg-12">
    @using (Html.BeginForm("RoadAddress", "Address", FormMethod.Post, new { @class = "form-horizontal", @id = "address_form" }))
    {
        <input type="hidden" name="currentPage" value="1" />
        <input type="hidden" name="countPerPage" value="50" />
        <input type="hidden" name="confmKey" value="devU01TX0FVVEgyMDIwMDIxNjEzMTEzNjEwOTQ3MDA=" />

        <div class="row">
            <div class="col-lg-6">
                <div class="input-group row">

                    <span class="input-group-addon"> 검색어 </span>

                    @Html.TextBox("keyWord", "", new { @class = "form-control" })

                    <input type="submit" class="form-control btn btn-primary" value="검색" />
                </div>
            </div>
        </div>
    }
</div>

<br />
<br />
<br />
<br />

<div class="col-lg-12">
    <table border="1" width="800">
        @if (Model != null)
        {
            <thead>
                <tr style="text-align:center; vertical-align:central; font-family:NanumGothic; font-size:large; font-weight:bold">
                    <td> 도로명 주소 </td>
                    <td width="200"> 주소선택 </td>
                </tr>
            </thead>
            for (int i = 0; i < Model.gridList.Count; i++)
            {
                <tr style="text-align:left; vertical-align:central; font-family:NanumGothic; font-size:large;">
                    <td>
                        @Html.HiddenFor(m => m.gridList[i])
                        @Model.gridList[i]
                    </td>
                    <td>
                        <input class="btn-block" type="submit" value="선택" />
                    </td>
                </tr>
            }
        }
    </table>
</div>
